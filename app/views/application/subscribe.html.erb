<section class="col-md-6 col-md-offset-3" style="margin-top: 3em;">

<h1 class="page-header"><%= t :subscription_to, event: @event.name %></h1>

<section class="well">
<%= form_for @form, url: submit_subscription_path do |f| %>

  <%= f.hidden_field :event_id %>

  <article class="form-group">
    <%= f.label :email %><br>
    <%= f.text_field :email, autofocus: true, class: 'form-control' %>
  </article>

  <article class="form-group">
    <%= f.label :first_name %><br>
    <%= f.text_field :first_name, class: 'form-control' %>
  </article>

  <article class="form-group">
    <%= f.label :last_name %><br>
    <%= f.text_field :last_name, class: 'form-control' %>
  </article>

  <article class="form-group">
    <%= submit_tag t(:submit), class: 'btn btn-primary' %>
  </article>
<% end %>

</section>

</section>