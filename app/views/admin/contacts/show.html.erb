<h1><%= t :contact %></h1>

<section class="well">

  <dl>
    <dt><%= t :email %></dt>
    <dd><%= @contact.email %></dd>

    <dt><%= t :first_name %></dt>
    <dd><%= @contact.first_name %></dd>

    <dt><%= t :last_name %></dt>
    <dd><%= @contact.last_name %></dd>

    <dt><%= t :created_at %></dt>
    <dd><%= l @contact.created_at %></dd>

    <dt><%= t :subscriptions %></dt>
    <dd>
      <ul>
      <% @contact.subscriptions.each do |subscription| %>
        <li>
          <%= subscription.event.name %>
          <%= subscription.assistance ? icon(:check, class: 'text-success') : icon(:times, class: 'text-danger') %>
        </li>
      <% end %>
      </ul>
    </dd>
  </dl>

  <%= link_to t(:contact, scope: :edit), [:edit, :admin, @contact], class: 'btn btn-edit btn-primary' %>
  <%= link_to t(:back), [:admin, :contacts], class: 'btn btn-back btn-link' %>

</section>